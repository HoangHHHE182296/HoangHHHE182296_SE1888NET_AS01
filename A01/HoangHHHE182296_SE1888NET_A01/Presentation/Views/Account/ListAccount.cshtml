@using Core.Constants.Account
@using Core.Enums
@using System.Text.Json
@model IEnumerable<Presentation.View_Model.Data.AccountViewModel>

@{
    ViewData["Title"] = "Account List";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

<div class="container mt-5">
    <h2 class="mb-5 text-center">Account Management</h2>
    <form method="get" asp-action="ListAccount" class="row g-3 align-items-end bg-light mb-4 rounded p-3 shadow-sm">
        <div class="col-md-3">
            <input type="text" name="Keyword" class="form-control"
                   placeholder="Enter username or email" value="@ViewBag.Keyword"/>
        </div>

        <div class="col-md-3">

            <select name="Role" class="form-select">
                <option value="">All</option>

                <option value="@(AccountRole.Staff)" selected="@(ViewBag.Role == AccountRole.Staff.ToString())">Staff</option>
                <option value="@(AccountRole.Lecture)" selected="@(ViewBag.Role == AccountRole.Lecture.ToString())">Lecturer</option>
            </select>
        </div>

        <div class="col-sm-12 col-md-6 d-flex justify-content-md-between align-items-center gap-2">
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary justify-self d-flex align-items-center gap-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Search Account">
                    <i class="bi bi-search"></i><span>Search</span>
                </button>
                <a href="@Url.Action("ListAccount", "Account")" class="btn btn-secondary d-flex align-items-center gap-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Reset Filter">
                    <i class="bi bi-arrow-clockwise"></i><span>Reset</span>
                </a>
            </div>
            <div data-bs-toggle="tooltip" data-bs-placement="top" title="Create A New Account">
                <button type="button" class="btn btn-success d-flex align-items-center gap-2" data-bs-toggle="modal" data-bs-target="#modal" data-action-type="@(AccountModalConst.Create.Value)">
                    <i class="bi bi-plus-circle"></i><span class="text-nowrap">Create new account</span>
                </button>
            </div>
        </div>
    </form>

    <!-- Table -->
    <div class="table-responsive table shadow-sm" id="account-table-container">
        @await Html.PartialAsync("_AccountTablePartial", Model)
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="account-form" method="post">
                    <input type="hidden" name="actionType" id="action-type" />
                    <div class="modal-body">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary btn-submit"></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/account.js"></script>
}
