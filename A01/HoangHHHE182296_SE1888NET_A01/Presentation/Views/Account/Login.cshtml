@model Presentation.View_Model.LoginModel;

@{
    ViewData["Title"] = "Login";
}


<div class="d-flex flex-column justify-content-center align-items-center vh-100 container">
    <h1 class="mb-5">FUNewsManagementSystem</h1>
    <div class="card p-4 shadow-lg" style="width: 380px; border-radius: 15px;">
        <h4 class="mb-4 text-center">🔐 Login</h4>

        @if (ViewBag.ErrorMessage != null) {
            <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label class="form-label" for="email">Email address</label>
                <input asp-for="Email" id="email" type="email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

            <div class="mt-3 text-center">
                <a href="/">Back to Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}